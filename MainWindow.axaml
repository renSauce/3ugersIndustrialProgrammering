<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="SystemLogin.MainWindow"
        xmlns:local="clr-namespace:SystemLogin"
        x:DataType="local:MainWindow"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Title="SystemLogin">
    <Window.Styles>
        <Style Selector="TextBox, Button, CheckBox, StackPanel">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Styles>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TabControl Name="TabControl">
            <TabItem Header="ğŸ”‘Login" Name="LoginTab">
                <StackPanel>
                    <TextBox Name="LoginUsername" Watermark="username">admin</TextBox>
                    <TextBox Name="LoginPassword" Watermark="password" PasswordChar="â—">admin</TextBox>
                    <Button Click="LoginButton_OnClick">Login</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="ğŸ¦¾Robot" Name="RobotTab">
                <TextBlock>Placeholder</TextBlock>
            </TabItem>
            <TabItem Header="ğŸ‘¥Users" Name="UsersTab">
                <StackPanel>
                    <TextBlock>Create User</TextBlock>
                    <TextBox Name="CreateUserUsername" Watermark="username" />
                    <TextBox Name="CreateUserPassword" Watermark="password" PasswordChar="â—" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>Is admin</TextBlock>
                        <CheckBox Name="CreateUserIsAdmin" />
                    </StackPanel>
                    <Button Click="CreateUserButton_OnClick">Register</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="ğŸ›¢Database" Name="DatabaseTab">
                <StackPanel>
                    <Button Click="RecreateDatabaseButton_OnClick">Recreate default database</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Button Name="LogoutButton" IsVisible="False" Click="LogoutButton_OnClick" HorizontalAlignment="Right"
                VerticalAlignment="Top">
            Logout
        </Button>
        <Border Grid.Row="1" Background="LightGray" BorderBrush="Black"
                BorderThickness="0,1,0,1" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock Name="LogOutput" VerticalAlignment="Top" TextWrapping="Wrap" FontFamily="Consolas" />
            </ScrollViewer>
        </Border>
        <Button Grid.Row="2" Click="ClearLogButton_OnClick">Clear</Button>
    </Grid>
</Window>